{
    "$schema": "https://turborepo.org/schema.json",
    "pipeline": {
        "build": {
            "outputs": ["dist/**", ".next/**", "public/dist/**"],
            "dependsOn": ["^build"],
            "env": ["NEXT_PUBLIC_API_HOST"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": []
        },
        "lint": {
            "dependsOn": ["^build"],
            "outputs": []
        },
        "lint:fix": {
            "dependsOn": ["^build"],
            "outputs": [
                "**/*.ts",
                "**/*.tsx",
                "**/*.js",
                "**/*.jsx",
                "**/*.json",
                "**/*.md"
            ]
        },
        "dev": {
            "cache": false
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": [".env"]
}
